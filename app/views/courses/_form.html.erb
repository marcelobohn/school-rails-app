<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :status, as: :boolean, checked_value: 1, unchecked_value: 0 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
