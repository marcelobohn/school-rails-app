<h1>Enrollments#new</h1>

<%= form_tag("/enrollments/create", method: "post") do %>
  <p>
    <%= label_tag(:course_id, "Courses:") %>
    <%= select_tag "course_id", options_from_collection_for_select(@all_courses, "id", "name") %>
  </p>

  <p>
    <%= label_tag(:student_id, "Students:") %>
    <%= select_tag "student_id", options_from_collection_for_select(@all_students, "id", "name") %>
  </p>

  <p>
    <%= label_tag(:entry_at, "Entry At:") %>
    <%= date_field_tag "entry_at", Date.today %>
  </p>

  <%= submit_tag("Confirmar", :class => 'btn btn-success')%>
<% end %>
